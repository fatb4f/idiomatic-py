# direnv + uv (activated venv)
# - creates .venv (if missing)
# - installs deps
# - exports VIRTUAL_ENV and PATH so all shells/panes inherit it (Zellij-friendly)

uv venv .venv
uv sync

export VIRTUAL_ENV="$PWD/.venv"
export PATH="$VIRTUAL_ENV/bin:$PATH"

# Safety: avoid leaking custom Python paths
unset PYTHONPATH
